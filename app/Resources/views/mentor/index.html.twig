{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Mentor list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Skills</th>
                <th>Info</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mentor in mentors %}
            <tr>
                <td>{{ mentor.id }}</td>
                <td>{{ mentor.name }}</td>
                <td>{{ mentor.skills }}</td>
                <td>{{ mentor.info }}</td>
                <td>
                    <a href="{{ path('admin_mentor_edit', { 'id': mentor.id }) }}" class="btn btn-info">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr/>
    <a href="{{ path('admin_mentor_new') }}" class="btn btn-success">Add mentor</a>

{% endblock %}
